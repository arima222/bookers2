<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3 class = 'text-danger'><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
          <div class = 'text-danger'><%= message %></div>
        <% end %>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true %>
          <!--<input class="form-control name" type="text" value="ueda" name="user[name]" id="user_name">-->
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image %>
          <!--<input value="{}" data-reference="4ec1d3acb7555e68a6e5917f8acd0763" type="hidden" name="user[profile_image]"><input class="form-control-file user_image" data-reference="4ec1d3acb7555e68a6e5917f8acd0763" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">-->
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true %>
          <!--<textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>-->
        </div>
        <div class="form-group">
          <%= f.submit 'Update User' %>
          <!--<input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">-->
        </div>
      <% end %>
    </div>
  </div>
</div>